source 'https://rubygems.org'

group :development do
  # Use Rake to manage tasks
  gem 'rake'
  # Use YARD to document
  gem 'yard'
  # Use minitest for tests
  gem 'minitest'
  # Use minitest-reporters to highlight test results
  gem 'minitest-reporters'
  # Use Rubocop to analyze codes
  gem 'rubocop', require: false
  # Wear Coveralls to analyze coverage
  gem 'coveralls', require: false
  # Measure test coverage with Code Climate
  gem 'codeclimate-test-reporter', require: false
end
